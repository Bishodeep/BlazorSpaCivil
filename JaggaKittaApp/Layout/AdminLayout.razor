@inherits LayoutComponentBase

<MudThemeProvider></MudThemeProvider>
<MudDialogProvider></MudDialogProvider>
<MudSnackbarProvider></MudSnackbarProvider>
<MudPopoverProvider></MudPopoverProvider>

<MudLayout>
    <MudAppBar Elevation="1">
        <MudIconButton Icon="@Icons.Material.Filled.Menu" Color="Color.Inherit" Edge="Edge.Start"
                       OnClick="@ToggleDrawer"/>
        <MudSpacer/>
        <MudImage Src="images/Logo/logo.png" Alt="Logo" Width="60" Class="ml-2" />
    </MudAppBar>
    <MudDrawer @bind-Open="@_open" Elevation="1">
        <MudDrawerHeader>
            <MudText Typo="Typo.h6">Jagga Kitta</MudText>
        </MudDrawerHeader>
        <MudNavMenu>
            <MudNavLink href="/admin-home" Match="NavLinkMatch.All">Home</MudNavLink>
            <MudNavLink href="/valuation" Match="NavLinkMatch.All">Valuations</MudNavLink>
            <MudNavLink Match="NavLinkMatch.All">Logout</MudNavLink>
        </MudNavMenu>
    </MudDrawer>
    <MudMainContent Class="pt-16 px-16">
        <MudContainer Class="mt-6">
            @Body
        </MudContainer>
    </MudMainContent>
</MudLayout>

@code{

    private bool _open = false;

    private void ToggleDrawer()
    {
        _open = !_open;
    }

}